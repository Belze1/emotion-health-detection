# Flask Configuration
FLASK_APP=main.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key-here  # Get from Google Cloud Console

# Webcam Configuration
WEBCAM_WIDTH=640
WEBCAM_HEIGHT=480

# Analysis Configuration
EMOTION_CHECK_INTERVAL=30  # Check emotions every 30 frames
RISK_CHECK_INTERVAL=300   # Check depression risk every 5 minutes
RISK_THRESHOLD=0.7       # Threshold for high risk assessment

# Video Recommendation Settings
MAX_RECOMMENDATIONS=4     # Number of videos to show
INITIAL_CANDIDATES=20    # Number of initial candidates
EMBEDDING_MODEL=all-MiniLM-L6-v2  # Model for semantic embeddings

# Data Storage Paths
DATA_DIR=data
MODELS_DIR=models
METADATA_PATH=data/cleaned_youtube_metadata.csv  # Path to your video data CSV
EMBEDDINGS_CACHE_DIR=models/embeddings

# Socket Configuration
SOCKET_UPDATE_INTERVAL=1.0  # Minimum time between socket updates (seconds)

# Debug Settings
DEBUG_RECOMMENDATIONS=true  # Enable detailed logging for recommendations